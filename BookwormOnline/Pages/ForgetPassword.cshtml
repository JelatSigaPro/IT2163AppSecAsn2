@page
@model BookwormOnline.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <h2>Forgot Password</h2>
    <p>Enter your email, and we will send you a reset link.</p>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="FModel.Email" class="form-label">Email</label>
            <input asp-for="FModel.Email" class="form-control" required />
            <span asp-validation-for="FModel.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Send Reset Link</button>
    </form>
</div>
