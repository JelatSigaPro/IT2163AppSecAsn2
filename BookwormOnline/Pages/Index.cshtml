@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h1>Welcome, @Model.CurrentUser.FirstName @Model.CurrentUser.LastName!</h1>

    <div class="card mt-4">
        <div class="card-header">
            <h3>User Details</h3>
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> @Model.CurrentUser.Email</p>
            <p><strong>Mobile Number:</strong> @Model.CurrentUser.MobileNo</p>
            <p><strong>Billing Address:</strong> @Model.CurrentUser.BillingAddress</p>
            <p><strong>Shipping Address:</strong> @Model.CurrentUser.ShippingAddress</p>
            <p><strong>Credit Card:</strong> @ViewData["DecryptedCreditCard"]</p>
            <p><strong>Profile Photo:</strong></p>
            <img src="@Model.CurrentUser.PhotoPath" alt="Profile Picture" class="img-thumbnail" width="150" />
        </div>
    </div>
    <!-- Change Password Button -->
    <div class="mt-3">
        <a asp-page="/ChangePassword" class="btn btn-warning">Change Password</a>
    </div>
    <div class="mt-3">
        <a asp-page="/Enable2FA" class="btn btn-success">2FA Options</a>
    </div>
</div>
